
<div class="card m-3 p-3">
  <h3 class="text-center">Biography Albert</h3>
	<header>
		<div class="card p-2">
			<h1 class="text-center">{{name}}</h1>
			<ul>
				<li>birthdate:{{birthdate}}</li>
				<li>birthplace:{{birthplace}}</li>
				<li>deathdate:{{deathdate}}</li>
				<li>deathplace:{{deathplace}}</li>
				<li>nationality:{{nationality}}</li>
				<li>occupation:{{occupation}}</li>
			</ul>
		</div>

		<div class="card p-2">
			<ul>
				<h3 class="text-center"><em>known for:</em></h3>
					{{#each known_for}}
						<li>{{this}}</li>
					{{/each}}
			</ul>
		</div>

		<div class="card p-2">
			<div>
				<ul>
					{{#each education}}
					<h3 class="text-center"><em>Education</em></h3>
						<li>field:{{field}}</li>
						<li>institution:{{institution}}</li>
						<li>year:{{year}}</li>
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="card p-2">
			<h3 class="text-center"><em>Notable_publications</em></h3>
			<div>
				<ul>
					{{#each notable_publications}}
						<li>title:{{title}}</li>
						<li>year:{{year}}</li>
						<li>publisher:{{publisher}}</li>
						<hr>
					{{/each}}
				</ul>
			</div>
		</div>
	</header>
</div>