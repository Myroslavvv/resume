{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<main>
	<div class="nav">
		{{#with navigation}}
			{{#each links}}
			<div class="nav-item">
				<a href={{href}} class="nav-link">{{text}}</a>
			</div>
			{{/each}}
		<div class="nav-item">
			<a href="#" class="nav-link disabled">Disabled</a>
		</div>
		{{/with}}
	</div>
	<hr>

	<div class="row">
		{{#with newsBlock}}
			<h1 class="text-center">{{title}}</h1>
				{{#each cards}}
				<div class="col-3">
					<div class="card text-bg-dark mb-1 ms-1">
						<div class="card-header">
							<h5>{{title}}</h5>
								{{#if isNew}}
									<div class="badge rounded-pill text-bg-success">New</div>
								{{/if}}
								{{#if isTop}}
									<div class="badge rounded-pill text-bg-danger">Top</div>
								{{/if}}
						</div>
						<div class="card-body pt-1">
							{{description}}
						</div>
					</div>
				</div>
				{{/each}}
		{{/with}}
	</div>
	<hr>

	<div class="row">
		{{#with goodsBlock}}
		<div class="col-12">
			<div class="nav nav-tabs">
				{{#each tabs}}
						<div class="nav-item">
							{{#if isActive}}
								<a href="#" class="nav-link active">{{text}}</a>
							{{else isDisabled}}
								<a href="#" class="nav-link disabled">{{text}}</a>
							{{else}}
							<a href="#" class="nav-link">{{text}}</a>
							{{/if}}
						</div>
				{{/each}}
			</div>
		</div>
		{{#each cards}}
			<div class="col-4">
				<div class="card mt-3">
					<img class="card-img-top" src={{image}} alt={{title}}>
					<div class="card-body">
						<h5>{{title}}</h5>
						{{#if isHot}}
							<div class="badge rounded-pill text-bg-warning">Hot</div>
						{{/if}}
						{{#if isNew}}
							<div class="badge rounded-pill text-bg-primary">New</div>
						{{/if}}
						<p>{{description}}</p>
					</div>
				</div>
			</div>
		{{/each}}
		{{/with}}
	</div>
	<hr>

	<div class="row">
		{{#with subscribe}}
		<div class="card text-bg-dark">
			<div class="col-12">
				<div class="card-body">
					<h2>{{header}}</h2>
					<p>{{description}}</p>
					{{#each buttons}}
					<div class="my-2">
						<a href={{link}} class="btn btn-primary">{{text}}</a>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
		{{/with}}
	</div>
	<hr>

	<div class="row">
		{{#with service}}
		<div class="card text-bg-success text-center">
			<div class="col-12">
				<div class="card-body">
					<h2>{{title}}</h2>
					<p>{{description}}</p>
					{{#each buttons}}
					<div>
						<a href={{link}} class="btn btn-primary">{{text}}</a>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
		{{/with}}
	</div>
	<hr>

	<div class="nav ">
			{{#each footer}}
			<div class="flex-column">
				<div class="nav-item">
					{{#each this}}
						<a href={{link}} class="nav-link">{{text}}</a>
					{{/each}}
				</div>
				<div class="nav-item">
					<a href="#" class="nav-link disabled">Disabled</a>
				</div>
			</div>
			{{/each}}
	</div>
</main>
