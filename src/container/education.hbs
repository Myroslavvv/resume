<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My educations" big=true}}
            <ul class="ps-5">
                {{#each educations}}
                <li>
                    {{name}} ({{points}})

                    {{#if isEnd}} 
                        (End) 
                    {{else}}
                        (ще в процесі)
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </section> 

        <section>
            {{> title data="My certificates" big=false}}
            <ul class="ps-5">
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>

       
    </main>
    {{/with}}
</div>

