<main>
	<div>
		{{#with navigation}}
		<div class="nav">
			{{#each links}}
				<div class="nav-item">
					<a href={{href}} class="nav-link">{{text}}</a>
				</div>
			{{/each}}
			<div class="nav-item">
					<a href="#" class="nav-link disabled">Disabled</a>
			</div>
		</div>
		{{/with}}
	</div>
	<hr>

	{{!-- <h2>{{header}}</h2>
