	<div class="row">
	<h2>{{header}}</h2>
	{{#with purchase}}
		<div class="col-12">
			<div class="nav nav tabs">
				{{#each tabs}}
					<div class="nav-item">
						<a href="#" class="nav-link">{{this}}</a> 
					</div>
				{{/each}}
			</div>
		</div>

		<div class="row">
			{{#with actionBlock}}
				<label class="form-label"></label>
				<div class="col-4">
					{{#with input}}
						{{#with placeholder}}
						<input class="form-control"  placeholder="{{this}}">
						<p></p>
						{{/with}}
					{{/with}}
				</div>
				<div class="col-8">
					{{#each buttons}}
							{{#if isSuccess}}
								<a href={{link}} class="btn btn-success">{{text}}</a>
							{{/if}}
							{{#if isOutline}}
								<a href={{link}} class="btn btn-outline-success">{{text}}</a>
							{{/if}}
							{{#if isDanger}}
								<a href={{link}} class="btn btn-outline-danger">{{text}}</a>
							{{/if}}
					{{/each}}
				</div>
			{{/with}}

			<p> {{>purchaseItem}}</p>
			
		</div>
	{{/with}}
	</div>
	<hr>

	<div>
		{{#with userInfo}}
		<h5 class="pb-2">{{title}}</h5>
			<div class="card">
				<div class="card-body">
				{{#with profileData}}
					<h5 class="pb-2">{{title}}</h5>

					<div class="card mb-4">
						<div class="card-body">
							<div class="row">
								{{#with fullName}}
									<div class="col-4">
										{{#with surname}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
									<div class="col-4">
										{{#with name}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
									<div class="col-4">
										{{#with middleName}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
								{{/with}}
							</div>
						</div>
					</div>
					
					<div class="card mb-4">
						<div class="card-body">
							<div class="row">
								{{#with otherInfo}}
									<div class="col-4">
										{{#with birthday}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
									<div class="col-4">
										{{#with sex}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
									<div class="col-4">
										{{#with language}}
											<div>{{title}}</div>
											<b>{{value}}</b>
										{{/with}}
									</div>
								{{/with}}
							</div>
						</div>
					</div>
				{{/with}}

				<div class="card mb-4">
					<div class="card-body">
						<div class="row">
							{{#each buttons}}
								<div class="col-4">
									{{#if isPrimary}}
										<a href={{link}} class="btn btn-primary">{{text}}</a>
									{{/if}}
									{{#if isSecondary}}
										<a href={{link}} class="btn btn-outline-success">{{text}}</a>
									{{/if}}
									{{#if isDanger}}
										<a href={{link}} class="btn btn-outline-danger">{{text}}</a>
									{{/if}}
								</div>
							{{/each}}
						</div>
					</div>
				</div>	

				<div>
					<div class="card mb-4">
						<div class="card-body">
							{{#with recipients}}
							<h5>{{title}}</h5>
								<div class="row">
									{{#each users}}
										<div class="col-4">
											<div class="card">
												<div class="card-body">
													<b>{{name}}</b>
													<div>{{phone}}</div>
														{{#with button}}
															<a href={{link}} class="btn btn-primary">{{text}}</a>
														{{/with}}
												</div>
											</div>
										</div>
									{{/each}}
								</div>
							{{/with}}
						</div>
					</div>
				</div>

				
				<div>
					<div class="card">
						<div class="card-body">
							{{#with contacts}}
								<h5>{{title}}</h5>
								<div class="row">
									{{#each contactData}}
										<div class="col-4">
											<div class="card">
												<div class="card-body">
													<b>{{title}}</b>
													<div>{{value}}</div>
													{{#with button}}
														{{#if isPrimary}}
															<a href={{link}} class="btn btn-primary">{{text}}</a>
														{{/if}}
														{{#if isSecondary}}
															<a href={{link}} class="btn btn-outline-success">{{text}}</a>
														{{/if}}
														{{#if isDanger}}
															<a href={{link}} class="btn btn-outline-danger">{{text}}</a>
														{{/if}}
													{{/with}}
												</div>
											</div>
										</div>
									{{/each}}
								</div>
							{{/with}}
						</div>
					</div>
				</div>
			</div>
		{{/with}}
		<hr>

		<div class="nav">
			{{#each footer}}
			<div class="flex-column">
				<div class="nav-item">
					{{#each this}}
						<a href={{link}} class="nav-link">{{text}}</a>
					{{/each}}
				</div>
				<div class="nav-item">
					<a href="#" class="nav-link disabled">Disabled</a>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</main>
