{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    <div class="card">
		<div class="card-body">
            {{#with heading}}
                <div class="card">
                    <div class="card-body">
                        {{#with main}}
                            <h1>{{title}}</h1>
                            <p>{{text}}</p>
                                {{#with button_text}}
                                    <button class="btn btn-primary">{{solid}}</button>
                                    <button class="btn btn-outline-primary">{{outline}}</button>
                                {{/with}}
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                    {{#with second}}
                        <h2>{{title}}</h2>
                        <p>{{text}}</p>
                            {{#with button_text}}
                                <button class="btn btn-secondary">{{solid}}</button>
                                <button class="btn btn-outline-secondary">{{outline}}</button>
                            {{/with}}
                    {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                    {{#with subblock}}
                        <h3>{{title}}</h3>
                        <p>{{text}}</p>
                            {{#with button_text}}
                                <button class="btn btn-dark">{{solid}}</button>
                                <button class="btn btn-outline-dark">{{outline}}</button>
                            {{/with}}
                    {{/with}}
                    </div>
                </div>

            {{/with}}
        </div>
    </div>
	<br>
    <div class="card">
		<div class="card-body">
            {{#with nested_display}}
				<div class="display-1">{{title}}</div>
				<div class="card">
					<div class="card-body">
						{{#with children_display}}
							<div class="display-4">{{title}}</div>
							<p>{{text}}</p>
							{{#with button}}
								<button class="btn btn-outline-warning">{{text}}</button>
							{{/with}}
						{{/with}}
					</div>
				</div>
				<br>
				<h6>{{header_text}}</h6>
				<br>
				{{#with button}}
					<button class="btn btn-info">{{text}}</button>
				{{/with}}
            {{/with}}
        </div>
    </div>

	<br>

    <div class="card">
		<div class="card-body">
            {{#with paragraph}}
				<div class="text-uppercase">{{title}}</div>
				<br>
				<div class="text-lowercase">{{text}}</div>
				<br>
				{{#with button}}
					<button class="btn btn-link">{{text}}</button>
				{{/with}}
				<br>
				<br>
				<div class="card">
					<div class="card-body">
						<div>
                   			<ul>
                        		{{#each list_name}}
                            		<li>
										<button class="btn btn-link">{{text}}</button>
									</li>
									<br>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>
			{{/with}}
		</div>
	</div>
</div>
 
